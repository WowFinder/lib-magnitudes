{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "allowJs": true,
        "declaration": true,
        "module": "nodenext",
        "lib": ["esnext"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "isolatedModules": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noUnusedLocals": true
    },
    "include": ["src/**/*", "src/.setup.ts"],
    "exclude": ["**/__tests__"]
}



