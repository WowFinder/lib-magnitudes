{
    "name": "@wowfinder/lib-magnitudes",
    "version": "0.0.1",
    "description": "TypeScript library for unit-aware handling and arithmetics of arbitrary magnitudes",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/WowFinder/lib-magnitudes.git"
    },
    "author": "Edurne Pascual <herenvardo@gmail.com>",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "lint": "eslint . --ext js,ts,jsx,tsx",
        "lint:fix": "eslint . --ext js,ts,jsx,tsx --fix",
        "format": "prettier --write --log-level=warn \"src/**/*.{js,ts,jsx,tsx,json,json5}\"",
        "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,json5}\"",
        "precommit": "npm-run-all -sc lint:fix format test:coverage build skott:circular",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest watch",
        "skott:web": "skott -nit --displayMode=webapp --trackThirdPartyDependencies --trackBuiltinDependencies src/",
        "skott:circular": "skott -nit --showCircularDependencies --displayMode=raw",
        "checks:quick": "npm-run-all -pc lint build:tsc",
        "checks:fix": "npm-run-all -sc lint:fix format build:tsc",
        "checks:standard": "npm-run-all -sc lint format:check build:tsc test skott:circular",
        "checks:full": "npm-run-all -sc lint:fix format test:coverage build skott:circular",
        "checks:pedantic": "npm-run-all -sc lint format:check test:coverage build skott:circular",
        "build:pre": "rimraf dist",
        "build:tsc": "tsc",
        "build:clean-tests": "find ./dist -name '__tests__' | xargs rm -rf",
        "build:setup": "node dist/.setup.js",
        "build:pack": "cd dist && yarn pack && mv package.tgz ../package.tgz && cd ..",
        "build": "npm-run-all -s build:pre build:tsc build:clean-tests build:setup build:pack",
        "prepublishOnly": "yarn version apply && yarn run checks:pedantic && yarn build",
        "prepare": "yarn build"
    },
    "devDependencies": {
        "@stylistic/eslint-plugin": "^5.2.2",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@tsconfig/recommended": "^1.0.10",
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^8.38.0",
        "@typescript-eslint/parser": "^8.38.0",
        "@typescript-eslint/utils": "^8.38.0",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-misc": "^3.3.1",
        "eslint-plugin-n": "^17.21.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.3",
        "eslint-plugin-promise": "^7.2.1",
        "jest": "^30.0.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "skott": "^0.35.4",
        "ts-jest": "^29.4.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.3",
        "vite-plugin-vitest-typescript-assert": "^1.1.4",
        "vitest": "^3.2.4"
    },
    "packageManager": "yarn@4.9.2"
}
